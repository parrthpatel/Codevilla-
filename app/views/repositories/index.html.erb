<p id="notice"><%= notice %></p>

<h1>Listing Repositories</h1>

<table class="table table-striped table-bordered table-hover table-condensed" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Html url</th>
      <th>Description</th>
      <th>Git url</th>
      <th>Ssh url</th>
      <th>Clone url</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.name %></td>
        <td><%= repository.html_url %></td>
        <td><%= repository.description %></td>
        <td><%= repository.git_url %></td>
        <td><%= repository.ssh_url %></td>
        <td><%= repository.clone_url %></td>
        <td><%= repository.language %></td>
        <td><%= link_to 'Show', repository %></td>
        <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
        <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<i class = 'fa fa-home'>  Home</i>".html_safe, root_path, class: "btn btn-primary" %>
