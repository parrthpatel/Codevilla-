<div class="wrapper wrapper-content animated fadeInRight">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h2>New Repository</h2>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                        </div>
                <div class="ibox-content">
                  <%= form_for @repository do |f| %>
                    <% if @repository.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@repository.errors.count, "error") %> prohibited this repository from being saved:</h2>

                        <ul>
                        <% @repository.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <div class="field">
                      <%= f.label :name, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :name, value: @name, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="field">
                      <%= f.label :full_name, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :full_name, value: @full_name, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="field">
                      <%= f.label :github_profile_nickname, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :github_profile_nickname, value: @maker, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="field">
                      <%= f.label :html_url, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :html_url, value: @html_url, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="field">
                      <%= f.label :description, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_area :description, value: @description, class: 'form-control', rows: 7 %>
                      </div>
                    </div>
                    <div class="field">
                      <%= f.label :git_url, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :git_url, value: @git_url, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="field">
                      <%= f.label :ssh_url, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :ssh_url, value: @ssh_url, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="field">
                      <%= f.label :clone_url, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :clone_url, value: @clone_url, class: 'form-control' %>
                      </div>
                    </div>
                    
                    <div class="field">
                      <%= f.label :language, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :language, value: @language, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="field">
                     <%= f.label 'Upload Your Code in Zip Formate', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                      <%= f.file_field :codezip, class: 'form-control', rows: 12 %>
                    </div>
                    </div>
                    <div class="field">
                      <%= f.label :amount, class: 'col-sm-2 control-label' %>
                      <div class="col-sm-10">
                      <%= f.text_field :amount, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="field">
                    <%= f.label :tag_list, "Tags (separated by commas)", class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                    <%= f.text_field :tag_list, class: 'form-control' %>
                    </div>
                    </div>
                    <div class="actions">
                      <%= f.submit class: 'btn btn-large btn-primary' %>
                    </div>
                  <% end %>

                  <%= link_to 'Back', root_path, class: 'btn btn-xs btn-white' %>
</div>
</div>
</div>
</div>