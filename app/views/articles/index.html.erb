
 <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h1><b>Articles</b></h1>
                </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight blog">
            <div class="row">
            <% @articles.each do |article| %>
                <div class="col-lg-12">
                  <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><%= article.title %></h5>
                        <div class="ibox-tools">
                            <%= link_to 'Show', article, class: "btn btn-white" %>
                         </div>
                         <div class="ibox-content">
                            <p><%= markdown truncate(article.body, length: 100) %></p>
                                <div class="col-md-6">
                                        <h5>Tags:</h5>&nbsp;<%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
                                </div>
                          </div> 
                    </div>
                  </div>
                </div>
          <% end %>
            </div>
            <%= will_paginate @article_paginate %>
</div>
